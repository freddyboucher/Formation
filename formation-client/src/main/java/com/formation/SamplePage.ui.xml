<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  </ui:style>
  <g:HTMLPanel styleName="text-center">
    <h2>Web Application Starter Project</h2>

    <h6>Please enter your name:</h6>
    <div class="form row justify-content-center">
      <div class="col-auto">
        <g:TextBox ui:field="nameField" styleName="form-control" />
      </div>
      <div class="col-auto">
        <g:Button ui:field="sendButton" styleName="btn btn-secondary">Send</g:Button>
      </div>
      <g:Label ui:field="errorLabel" styleName="text-danger" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
